<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dore.myapplication.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_play_song"
            app:destination="@id/nowPlayingFragment" />
    </fragment>
    <fragment
        android:id="@+id/songsFragment"
        android:name="com.dore.myapplication.fragment.SongFragment"
        android:label="song"
        tools:layout="@layout/fragment_song" >
        <action
            android:id="@+id/action_show_detail_artist"
            app:destination="@id/artistDetailsFragment" />
        <action
            android:id="@+id/action_show_detail_album"
            app:destination="@id/albumDetailFragment" />
        <action
            android:id="@+id/action_play_song"
            app:destination="@id/nowPlayingFragment" />
    </fragment>

    <fragment

        android:id="@+id/settingsFragment"
        android:name="com.dore.myapplication.fragment.SettingsFragment"
        android:label="setting"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_play_song"
            app:destination="@id/nowPlayingFragment" />
    </fragment>

    <fragment
        android:id="@+id/artistDetailsFragment"
        android:name="com.dore.myapplication.fragment.songs.ArtistDetailsFragment"
        android:label="fragment_artist_details"
        tools:layout="@layout/fragment_artist_details" >
        <action
            android:id="@+id/action_play_song"
            app:destination="@id/nowPlayingFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.dore.myapplication.fragment.songs.AlbumDetailFragment"
        android:label="fragment_album_detail"
        tools:layout="@layout/fragment_album_detail" >
        <action
            android:id="@+id/action_play_song"
            app:destination="@id/nowPlayingFragment" />
    </fragment>
    <fragment
        android:id="@+id/nowPlayingFragment"
        android:name="com.dore.myapplication.fragment.NowPlayingFragment"
        android:label="fragment_now_playing"
        tools:layout="@layout/fragment_now_playing" />

</navigation>